<h1>Create a Song</h1>

<%= form_for @song do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<h2>  Artist Name </h2>
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>

<br>

<h2>Select a Genre</h2>
<%= f.label :genre_id %>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<br>

<h2>Notes</h2>
<%= f.fields_for :notes do |note_form| %>
  <%= note_form.label :note %>
  <%= note_form.text_area :content, rows: 5, cols: 50 %>
  <br/>
<% end %>

<%= f.submit %>
<% end %>
